from operator import itemgetter
loop_end_value=1
conversions=[]
def celciusToFahrenheit():
    cel=int(input("enter the celcius value"))
    fah= cel*1.8 + 32
    conversions.append(('c',cel,'F',fah))
    print (fah)

def fahrenheitToCelcius():
    fah=int(input("enter the fah value"))
    cel = (fah-32)/1.8
    conversions.append(('F',fah,'C',cel))
    print (cel)

def celciusToKelvin():
    cel=int(input("enter the cel value"))
    kel= cel + 273
    conversions.append(('C',cel,'K',kel))
    print (kel)

def kelvinToCelcius():
    kel=int(input("enter the kel value"))
    cel= kel - 273
    conversions.append(('K',kel,'C',cel))
    print (cel)

def fahrenheitToKelvin():
    feh=int(input("enter the feh value"))
    kel=(feh-32)*0.556 + 273
    conversions.append(('F',feh,'K',kel))
    print (kel)

def kelvinToFahrenheit():
    kel=int(input("enter the kel value"))
    fah= (kel-273)*1.8 +32
    conversions.append(('K',kel,'F',fah))
    print (fah)

while loop_end_value:
   n=int(input("enter 1 for celcius to fahrenheit \n enter 2 for   fahrenheit yo celcius \n enter 3 for celcius to kelvin \n enter 4 for kelvin   to celcius \n enter 5 for feh to kelvin \n enter 6 for kelvin to feh \n enter 7 to view conversations \n enter 8 to exit\n"))
   if n == 1:
      celciusToFahrenheit()
   elif n==2:
      fahrenheitToCelcius()
   elif n==3:
      celciusToKelvin()
   elif n==4:
      kelvinToCelcius()
   elif n==5:
      fahrenheitToKelvin()
   elif n==6:
      kelvinToFahrenheit()
   elif(n==7):
      print ("\n\n\t\t**Display MENU**")
      print ("1.Ascending Order of FROM Value")
      print ("2.Descending Order of FROM Value")
      print ("3.Ascending Order of TO Value")
      print ("4.Descending Order of TO Value")
      ch=int(input("Enter Your Choice: "))

      if(len(conversions)==0):
        print ("No Conversions Found!")

      elif(ch==1):
        c=sorted(conversions,key=itemgetter(1))
        for i in c:
          print (i)

      elif(ch==2):
        c=sorted(conversions,key=itemgetter(1),reverse=True)
        for i in c:
          print (i)

      elif(ch==3):
        c=sorted(conversions,key=itemgetter(3))
        for i in c:
          print (i)

      elif(ch==4):
        c=sorted(conversions,key=itemgetter(3),reverse=True)
        for i in c:
          print (i)

      else:
        print ("Invalid Choice!")
   elif n==8:
      loop_end_value=0
